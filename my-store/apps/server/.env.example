# Server Configuration
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/mystore

# CORS - Development
CORS_ORIGIN=http://localhost:3001
# CORS - Production (comma-separated for bare + www):
# CORS_ORIGIN=https://mavrykpremium.store,https://www.mavrykpremium.store

# JWT Secrets (Generate with: openssl rand -base64 64)
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Encryption Key (Generate with: openssl rand -base64 32)
# IMPORTANT: Change this in production!
ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# Session Secret
SESSION_SECRET=your-session-secret-change-this-in-production

# Payment Gateway (VNPay - Sandbox)
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_TMN_CODE=your-tmn-code
VNPAY_HASH_SECRET=your-hash-secret
VNPAY_RETURN_URL=http://localhost:4000/api/payment/return

# SePay Payment Gateway Configuration
# Get credentials from: https://my.sepay.vn/ (production) or https://my.dev.sepay.vn/ (sandbox)
SEPAY_ENV=sandbox                                    # sandbox | production
SEPAY_MERCHANT_ID=your-merchant-id                   # Your Merchant ID from SePay Dashboard
SEPAY_SECRET_KEY=your-secret-key                     # Your Secret Key from SePay Dashboard
SEPAY_SUCCESS_URL=http://localhost:4001/payment/success
SEPAY_ERROR_URL=http://localhost:4001/payment/error
SEPAY_CANCEL_URL=http://localhost:4001/payment/cancel

# Frontend URL
FRONTEND_URL=http://localhost:4001

# Image base URL - prepend to relative image paths (e.g. /image_product/xxx)
# Production: https://mavrykpremium.store (nginx proxies /image_product/ to orderlist)
# IMAGE_BASE_URL=https://mavrykpremium.store

# Logging
LOG_LEVEL=info